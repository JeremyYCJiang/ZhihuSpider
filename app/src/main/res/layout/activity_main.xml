<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/DrawerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <!--Main Content (First Child)-->
    <RelativeLayout
        android:id="@+id/MainContentRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/tool_bar"/>

        <TextView
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tool_bar"/>
    </RelativeLayout>


    <!--Sliding Drawer Content (Second Child)-->
    <RelativeLayout
        android:id="@+id/SlidingDrawerRL"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <RelativeLayout
            android:id="@+id/UserProfileRL"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/ColorPrimary"
            android:padding="4dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile_image"
                app:border_width="1dp"
                app:border_color="#482c6f"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/profile_image"
                android:text="@string/remind_user_login_text"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
        <include layout="@layout/slide_drawer_header"
            android:id="@+id/slideDrawerHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserProfileRL"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/slideDrawerHeader"
            />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>


